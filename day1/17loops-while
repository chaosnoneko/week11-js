// while loop
// loops are repeat our action
// in programing , loops are sequence of instruction while execute repeatedly until certain condition is met

//syntax : while(condition){ // code}
// print out all numbers from 0-9
let i = 0;
while(i<10){
    console.log(i)
    i++
} // we are getting the same output from 0 to 9

// print all characters in this string
let string = "hello world";
let x = 0;
while(x<string.length){
    console.log(string[x])
    x++
}

// do while -  syntax: do{} while()

let a = 20;
do{
    console.log(a)
    a++;
} while(a<5) // it will print 20

let a = "exit";
do{
    console.log(a)
    a++;
} while(a!==exit)

// print each element inside your array

let cities = ["Berlin","Hamburg","Bonn"]
let b=0;
while(b<cities.length)
    console.log;(cities[b])
    if(cities[b]){
        b++; // if we won't write that it will be infinite loop 
    }

    let cities = ["Berlin","Hamburg","Bonn"]
    let b=0;
    while(b<cities.length)
    console.log;(cities[b])
    if(cities[b]==="Hamburg"){
        continue;
    }
